#Write a program to calculate the area and perimeter of a circle given its radius.
#include<stdio.h>
int main(){
    float r,area,perimeter;
    printf(" Radius of circle");
    scanf("%f",&r);
    area=3.14*r*r;
    perimeter= 2*3.14*r;
    printf("Area of Rectangle is %f\n",area);
    printf("Perimeter of Rectangle is %f\n",perimeter);
    return 0;
}
