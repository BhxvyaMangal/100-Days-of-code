#include <stdio.h>

int main() {
    int n, i;
    int arr[1000];
    int max_so_far, curr;

    scanf("%d", &n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    max_so_far = arr[0];
    curr = arr[0];

    for(i = 1; i < n; i++) {
        if(curr + arr[i] > arr[i])
            curr = curr + arr[i];
        else
            curr = arr[i];
        if(curr > max_so_far)
            max_so_far = curr;
    }

    printf("%d", max_so_far);

    return 0;
}
